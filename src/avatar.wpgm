import wollok.game.*
import characters.*
import movements.*
import elementosYBarra.*

program avatarGame {

	////////////////
	// S E T  U P //
	////////////////
	
	game.title("Avatar, the last airbender")
	game.width(12)
	game.height(12)
	
	///////////////////
	// V I S U A L S //
	///////////////////
	game.addVisual(aang)
	//BARRAS Y ELEMENTOS//
	game.addVisual(aire)
	
	game.addVisual(barraVida)
	game.addVisual(barraMana)
	/////////////////////
	// K E Y B O A R D //
	/////////////////////
	keyboard.up().onPressDo({aang.mover(arriba)})
	keyboard.down().onPressDo({aang.mover(abajo)})	
	keyboard.right().onPressDo({aang.mover(derecha)})	
	keyboard.left().onPressDo({aang.mover(izquierda)})	
	////////////////////
	//  E V E N T OS  //
	///////////////////
	game.onTick(3*1000, "regeneracionMana",{ aang.aumentarEnergia()})
	////////////////////
	//ELEMENTOS PRUEBA//
	///////////////////
	keyboard.a().onPressDo {agua.aprendioADominarElAgua() }
	keyboard.t().onPressDo {tierra.aprendioADominarLaTierra()}
	keyboard.f().onPressDo {fuego.aprendioADominarElFuego()}
	keyboard.e().onPressDo {aang.perderEnergia()}
	keyboard.v().onPressDo {aang.perderVida()}
	///////////////
    // S T A R T //
    ///////////////
    
	game.start()
}